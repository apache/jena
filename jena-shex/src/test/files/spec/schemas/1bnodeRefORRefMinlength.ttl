PREFIX ex: <http://a.example>
PREFIX sx: <http://www.w3.org/ns/shex#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

[] a sx:Schema ;
    sx:shapes (<http://a.example/S1>) .

<http://a.example/S1> a sx:Shape ;
  sx:expression [ a sx:TripleConstraint ; sx:predicate <http://a.example/p1> ;
    sx:valueExpr [ a sx:ShapeOr ; sx:shapeExprs (
      [ a sx:ShapeAnd ; sx:shapeExprs (
        [ a sx:NodeConstraint ; sx:nodeKind sx:bnode ]
        <http://a.example/S1>
      ) ]
      [ a sx:ShapeAnd ; sx:shapeExprs (
        [ a sx:NodeConstraint ; sx:minlength 20 ]
        <http://a.example/S1>
      ) ]
    ) ] ] .

