#!/bin/bash

if [ "$ARQROOT" = "" ]
    then 
    echo "ARQROOT is not set" 1>&2
    exit 1
fi

INIT="$ARQROOT/bin/arq_init"

if [ ! -r "$INIT" ] 
    then 
    echo "Script $INIT (\$ARQROOT/bin/arq_init) does not exist or is not readable"
    exit 1
fi

source "$INIT"
exec java $JVM_ARGS $SOCKS -cp "$ARQ_CP" org.openjena.riot.LangTag "$@"
