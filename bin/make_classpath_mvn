#!/bin/bash

DIRROOT="$1"

if [ "$DIRROOT" = "" ]
then
    echo "No directory given" 1>&2
    exit 1
    fi

M2_REPO="${M2_REPO:-$HOME/.m2/repository}" ;
X=$(perl -ne 'next unless /\spath="M2_REPO([^"]*)"/s ; print "$1","\n"' $DIRROOT/.classpath)

SEP=':'
CP=${CP:-}
[ "$CP" != "" ] && CP="${SEP}${CP}"
CP="$DIRROOT/classes${CP}"

for x in $X
do
    [ "$CP" != "" ] && CP="${CP}${SEP}"
    CP="$CP$M2_REPO$x"
done

CP="$DIRROOT/classes${SEP}${CP}"
echo "$CP"

